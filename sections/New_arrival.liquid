{%assign new_arrival=collections[section.settings.Newcollection_id]%}

<section class="New_arrival" style="background-color: {{section.settings.New_Arrival_bg_color}};">
    <a style="text-decoration:none;" href="{{new_arrival.url}}">
      <div class="container" style="height:100%">
        <div  class="row h-100" style="padding:20px 0 40px;">
  
          <div class=" col-md-4 New_arrival_text">
          <h1 style="color:{{section.settings.sale_color}};font-family:{{section.settings.collection_font}}">{{section.settings.Collection_title}}</h1>
            <p style="color:{{section.settings.sale_color}};font-family:{{section.settings.collection_font}}">{{section.settings.sub_heading}}</p>
            <span class="discover-now">{{section.settings.collection_btn}}<i class="fa fa-arrow-right"></i></span>
  
        </div>
       
        <div class="col-md-8 New_arrival_image">
            {%if new_arrival.image%}
             <img style="max-width:100%; max-height:100%; object-fit: contain;" src="{{new_arrival.image  | img_url:'1200x'}}">
             {%else%} 
             <img style="max-width:100%; max-height:100%; object-fit: contain;" src="{{section.settings.images-picker | img_url:'1200x'}}">
             {%endif%}
        </div>

      
       
        
        
           
         </div>
      </div>
  
  </a>
