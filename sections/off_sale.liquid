    <section class="off_sale" style="background-color: {{bgColor}};">
    
        <a style="text-decoration:none;" href="{{collection1.url}}">
     <div class="offsale_container">
      
        <div class=" off-sale-text">
          <h1>{{section.settings.Sale_title}}</h1>
          <p>{{section.settings.sub_Sale_title}}</p>
          <span>{{section.settings.Sale_btn}}</span>
      </div>
      
      <div class="sale_image">
        {%if collection1%}
        <img src="{{collection1.image | img_url:'1200x'}}" alt="" style="  max-width: 100%;
        height: auto;" >
       {% endif %}

      </div>
    </div>
         
      
